<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_treasure_quest_pergunta"
    tools:context="ufam.edu.br.treasurequest.TreasureQuestPerguntaActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageVermelho"
        android:src="@drawable/red_0"
        android:layout_alignTop="@+id/imageAzul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAzul"
        android:src="@drawable/blue_0"
        android:layout_toRightOf="@+id/imageVermelho"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageVerde"
        android:src="@drawable/green_0"
        android:layout_toRightOf="@+id/imageAzul"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAmarelo"
        android:src="@drawable/yellow_0"
        android:layout_toRightOf="@+id/imageVerde"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual Ã© o seu nome?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageVermelho"
        android:layout_marginTop="30dp"
        android:id="@+id/txtPergunta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="@drawable/button_reduced"
        android:id="@+id/btnOpcao1"
        android:layout_below="@+id/txtPergunta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="@drawable/button_reduced"
        android:id="@+id/btnOpcao2"
        android:layout_below="@+id/btnOpcao1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="@drawable/button_reduced"
        android:id="@+id/btnOpcao3"
        android:layout_below="@+id/btnOpcao2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="@drawable/button_reduced"
        android:id="@+id/btnOpcao4"
        android:layout_below="@+id/btnOpcao3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="@drawable/button_reduced"
        android:id="@+id/btnOpcao5"
        android:layout_below="@+id/btnOpcao4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
