<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_treasure_quest_barra"
    tools:context="ufam.edu.br.treasurequest.TreasureQuestBarraActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageVermelho"
        android:src="@drawable/red_0"
        android:layout_alignTop="@+id/imageAzul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAzul"
        android:src="@drawable/blue_0"
        android:layout_toRightOf="@+id/imageVermelho"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageVerde"
        android:src="@drawable/green_0"
        android:layout_toRightOf="@+id/imageAzul"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAmarelo"
        android:src="@drawable/yellow_0"
        android:layout_toRightOf="@+id/imageVerde"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/imageFrio"
        android:layout_centerVertical="true"
        android:src="@drawable/termometro_frio"
        android:layout_alignLeft="@+id/imageVermelho"
        android:layout_alignStart="@+id/imageVermelho" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/imageQuente"
        android:src="@drawable/termometro_quente"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/imageFrio"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/imageFrio"
        android:layout_alignLeft="@+id/imageFrio"
        android:layout_alignStart="@+id/imageFrio" />

</RelativeLayout>
