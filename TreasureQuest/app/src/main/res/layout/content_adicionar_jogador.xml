<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_adicionar_jogador"
    tools:context="ufam.edu.br.treasurequest.AdicionarJogadorActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxtNomeJogador"
        android:hint="Nome do Jogador"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="159dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione sua cor:"
        android:id="@+id/textView"
        android:layout_below="@+id/edtTxtNomeJogador"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btnVermelho"
        android:layout_marginTop="20dp"
        android:background="#ff0303"
        android:layout_below="@+id/textView"
        android:onClick="seleciona_cor1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btnAzul"
        android:background="#051afe"
        android:layout_alignTop="@+id/btnVermelho"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:onClick="seleciona_cor2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btnVerde"
        android:background="#0fd313"
        android:layout_alignTop="@+id/btnAzul"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:onClick="seleciona_cor3" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btnAmarelo"
        android:background="#ffff11"
        android:layout_alignTop="@+id/btnVerde"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:onClick="seleciona_cor4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIniciar"
        android:layout_below="@+id/btnVermelho"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_reduced"
        android:text="Iniciar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltar"
        android:layout_below="@+id/btnIniciar"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_reduced"
        android:text="Voltar"/>




</RelativeLayout>
